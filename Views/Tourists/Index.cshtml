@model IEnumerable<Bliss_Travels___Tours.Models.Tourist>

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome To Tourists Panel</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tour.TourId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TouristId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TouristId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TouristId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
